<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.jamp.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.jamp.ui.Perspective"
            id="org.jamp.ui.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.jamp.ui.application"
            name="JAmp">
         <property
               name="appName"
               value="JAmp">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.jamp.ui.commandhandler.ViewCommandHandler"
            id="viewlist.command"
            name="View">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="TheViewMenu"
               label="View">
            <command
                  commandId="viewlist.command"
                  label="List Views"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
