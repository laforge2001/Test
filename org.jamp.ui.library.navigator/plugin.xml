<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.jamp.ui.library.navigator.LibraryView"
            icon="icon/musicstore_48x48.png"
            id="org.jamp.library.music.view"
            name="Music"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="org.jamp.ui.library.navigator.LibraryView"
            icon="icon/video_48x48.png"
            id="org.jamp.library.movies.view"
            name="Movies"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="org.jamp.ui.library.navigator.LibraryView"
            icon="icon/photobook_48x48.png"
            id="org.jamp.library.photos.view"
            name="Photos"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.jamp.ui.library.navigator.LibraryContentProvider"
            icon="icon/playlist_16x16.png"
            id="org.jamp.library.navigatorcontent"
            labelProvider="org.jamp.ui.library.navigator.LibraryLabelProvider"
            name="navigator content"
            priority="normal">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.jamp.model.LibraryParent">
               </instanceof>
               <instanceof
                     value="org.jamp.ui.library.navigator.Root">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="org.jamp.model.LibraryParent">
               </instanceof>
               <instanceof
                     value="org.jamp.model.NodeObject">
               </instanceof>
            </or>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.jamp.library.music.view">
         <includes>
            <contentExtension
                  isRoot="false"
                  pattern="org.jamp.library.navigatorcontent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerContentBinding
            viewerId="org.jamp.library.movies.view">
         <includes>
            <contentExtension
                  isRoot="false"
                  pattern="org.jamp.library.navigatorcontent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerContentBinding
            viewerId="org.jamp.library.photos.view">
         <includes>
            <contentExtension
                  isRoot="false"
                  pattern="org.jamp.library.navigatorcontent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.jamp.ui.library.navigator.listManagement"
            id="org.jamp.ui.library.navigator.openEditor"
            name="open editor">
      </command>
      <category
            id="org.jamp.ui.library.navigator.listManagement"
            name="playlist management">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.jamp.ui.library.navigator.openEditor"
               icon="icon/playlist_16x16.png"
               label="Open Editor"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <or>
                        <instanceof
                              value="org.jamp.model.NodeObject">
                        </instanceof>
                     </or>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
